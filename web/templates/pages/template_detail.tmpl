{{ define "content" }}
{{ $detail := $.Template }}
<section class="py-6 space-y-8">
  <header class="space-y-2">
    <p class="text-xs uppercase tracking-wide text-indigo-500">Template</p>
    <h1 class="text-3xl font-bold text-gray-900">{{ $detail.Template.Name }}</h1>
    <p class="text-sm text-gray-600">Preview the template, review constraints, and launch a design directly.</p>
  </header>

  <div class="grid gap-8 lg:grid-cols-[2fr,1fr]">
    <div class="space-y-8">
      {{ template "c_template_detail" (dict "Detail" $detail "Lang" $.Lang) }}
      <div class="flex flex-wrap gap-3">
        {{ range $action := $detail.Actions }}
          {{ template "c_button" (dict "Label" $action.Label "Href" $action.Href "Variant" $action.Variant) }}
        {{ end }}
      </div>
    </div>
    <aside class="space-y-6">
      <div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-gray-900">Start with this template</h2>
        <p class="mt-2 text-sm text-gray-600">Launch the editor with presets configured for this template.</p>
        <div class="mt-4 flex flex-wrap gap-3">
          {{ template "c_button" (dict "Label" "Start design" "Href" (printf "/design?template=%s" $detail.Template.ID) "Variant" "primary") }}
          {{ template "c_button" (dict "Label" "Download assets" "Href" (printf "/downloads/%s.zip" $detail.Template.ID) "Variant" "outline") }}
        </div>
      </div>

      <div>
        <h2 class="text-sm font-semibold uppercase tracking-wide text-gray-700">Related templates</h2>
        <div class="mt-3 space-y-3">
          {{ range $detail.Related }}
            {{ template "c_template_related_card" (dict "Template" .) }}
          {{ else }}
            <p class="text-sm text-gray-500">No related templates yet.</p>
          {{ end }}
        </div>
      </div>
    </aside>
  </div>

  <div class="text-sm text-gray-500">Path: {{ $.Path }}</div>
</section>
{{ end }}

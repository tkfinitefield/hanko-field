{{ define "content" }}
<section class="py-10">
  <div class="mx-auto max-w-5xl space-y-8 px-4">
    <header class="space-y-2">
      <h1 class="text-3xl font-semibold text-gray-900">{{ .Title }}</h1>
      <p class="text-gray-600">{{ tlang $.Lang "guides.subtitle" }}</p>
    </header>

    <div class="rounded-xl bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 p-6 text-white shadow">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
          <p class="text-lg font-semibold">{{ tlang $.Lang "guides.subscribe.title" }}</p>
          <p class="mt-1 text-sm text-indigo-100">{{ $.Guides.SubscribeCopy }}</p>
        </div>
        <a href="{{ $.Guides.SubscribeURL }}" class="inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-medium text-indigo-700 shadow hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600">{{ $.Guides.SubscribeCTA }}</a>
      </div>
    </div>

    <div class="space-y-6">
      <div>
        <span class="text-sm font-semibold text-gray-700">{{ tlang $.Lang "guides.filters.persona_label" }}</span>
        <div class="mt-3 flex flex-wrap gap-2">
          {{ range $.Guides.PersonaOptions }}
            <a href="{{ .Href }}" class="inline-flex items-center gap-2 rounded-full border px-3 py-1.5 text-sm {{ if .Selected }}border-indigo-600 bg-indigo-600 text-white shadow{{ else }}border-gray-300 text-gray-700 hover:border-indigo-400{{ end }}">
              <span>{{ .Label }}</span>
              {{ if gt .Count 0 }}<span class="text-xs {{ if .Selected }}text-indigo-100{{ else }}text-gray-500{{ end }}">{{ .Count }}</span>{{ end }}
            </a>
          {{ end }}
        </div>
      </div>

      <form method="get" class="grid gap-4 md:grid-cols-[220px,1fr] xl:grid-cols-[240px,1fr]">
        <input type="hidden" name="hl" value="{{ $.Lang }}">
        <input type="hidden" name="persona" value="{{ $.Guides.ActivePersona }}">
        <div>
          <label for="guides-topic" class="block text-sm font-medium text-gray-700">{{ tlang $.Lang "guides.filters.topic_label" }}</label>
          <select id="guides-topic" name="topic" class="mt-1 block w-full rounded-md border-gray-300 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            {{ range $.Guides.TopicOptions }}
              <option value="{{ .Value }}" {{ if .Selected }}selected{{ end }}>{{ .Label }}{{ if gt .Count 0 }} ({{ .Count }}){{ end }}</option>
            {{ end }}
          </select>
        </div>
        <div class="flex flex-col gap-3 md:flex-row md:items-end">
          <div class="flex-1">
            <label for="guides-search" class="block text-sm font-medium text-gray-700">{{ tlang $.Lang "guides.filters.search_label" }}</label>
            <input id="guides-search" name="q" type="search" value="{{ $.Guides.Search }}" placeholder="{{ tlang $.Lang "guides.filters.search_placeholder" }}" class="mt-1 block w-full rounded-md border-gray-300 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
          </div>
          <button type="submit" class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">{{ tlang $.Lang "guides.filters.apply" }}</button>
        </div>
      </form>
    </div>

    {{ if $.Guides.ActiveFilters }}
      <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600">
        <span>{{ tlang $.Lang "guides.filters.active" }}</span>
        {{ range $.Guides.ActiveFilters }}
          <a href="{{ .Href }}" class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-3 py-1 font-medium text-indigo-700">
            <span>{{ .Label }}</span>
            <span aria-hidden="true">×</span>
          </a>
        {{ end }}
        <a href="{{ $.Guides.ClearAllURL }}" class="text-indigo-600 hover:underline">{{ tlang $.Lang "guides.filters.clear_all" }}</a>
      </div>
    {{ end }}

    <div class="flex items-center justify-between text-sm text-gray-600">
      <span>{{ $.Guides.Total }} {{ tlang $.Lang "guides.results.label" }}</span>
      {{ if $.Guides.Search }}<span class="italic">“{{ $.Guides.Search }}”</span>{{ end }}
    </div>

    {{ if $.Guides.Empty }}
      <div class="rounded-lg border border-dashed border-gray-300 bg-white p-8 text-center text-gray-500">
        {{ tlang $.Lang "guides.empty" }}
      </div>
    {{ else }}
      <div class="grid gap-6 md:grid-cols-2">
        {{ range $.Guides.Items }}
          <article class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-md">
            <a href="{{ .Href }}" class="block h-full">
              <div class="h-40 w-full bg-gray-100">
                <img src="{{ .HeroImageURL }}" alt="{{ .Title }}" class="h-40 w-full object-cover">
              </div>
              <div class="space-y-3 p-4">
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span class="font-medium text-indigo-600">{{ .CategoryLabel }}</span>
                  {{ if .PublishDate }}<time datetime="{{ .PublishISO }}">{{ .PublishDate }}</time>{{ end }}
                </div>
                <h3 class="text-lg font-semibold text-gray-900">{{ .Title }}</h3>
                <p class="text-sm text-gray-600">{{ .Summary }}</p>
                <div class="flex flex-wrap gap-2 text-xs text-gray-500">
                  {{ if .ReadTime }}<span class="rounded-full bg-gray-100 px-2 py-0.5">{{ .ReadTime }}</span>{{ end }}
                  {{ range .Tags }}<span class="rounded-full bg-indigo-50 px-2 py-0.5 text-indigo-600">{{ . }}</span>{{ end }}
                </div>
              </div>
            </a>
          </article>
        {{ end }}
      </div>
    {{ end }}
  </div>
</section>
{{ end }}

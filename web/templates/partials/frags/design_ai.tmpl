{{ define "frag_design_ai_table" }}
{{ $view := . }}
<div id="design-ai-table"
     class="space-y-5"
     data-poll-enabled="{{ if $view.Poll.Enabled }}true{{ else }}false{{ end }}"
     data-poll-interval="{{ $view.Poll.IntervalSeconds }}"
     data-countdown="{{ $view.Poll.CountdownSeconds }}"
     data-active-id="{{ $view.SelectedID }}"
     hx-get="/design/ai/table{{ if $view.Query }}?{{ $view.Query }}{{ end }}"
     hx-trigger="load,design-ai:refresh"
     hx-target="#design-ai-table"
     hx-swap="outerHTML">
  {{ if $view.Empty }}
    <div class="rounded-2xl border border-dashed border-gray-300 bg-white/80 p-10 text-center text-sm text-gray-600">
      <p class="font-medium text-gray-700">No suggestions match the current filters yet.</p>
      <p class="mt-2 text-xs text-gray-500">Keep the editor open and we will notify you as soon as new proposals arrive.</p>
    </div>
  {{ else }}
    <div class="grid gap-4 sm:grid-cols-2 xl:grid-cols-3">
      {{ $selected := $view.SelectedID }}
      {{ range $view.Suggestions }}
        {{ $tone := .StatusTone }}
        <article class="group relative flex h-full flex-col gap-4 rounded-2xl border border-gray-200 bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:border-indigo-300 hover:shadow-lg {{ if eq .ID $selected }}ring-2 ring-indigo-200{{ end }}"
                 data-suggestion-card="{{ .ID }}"
                 data-status="{{ .Status }}"
                 data-active="{{ if eq .ID $selected }}true{{ else }}false{{ end }}">
          <header class="flex items-start justify-between gap-3">
            <div class="space-y-2">
              <h3 class="text-sm font-semibold text-gray-900 leading-tight">{{ .Prompt }}</h3>
              <div class="flex flex-wrap items-center gap-2 text-xs font-medium">
                <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2 py-0.5 text-indigo-600">
                  {{ template "icon" (dict "Name" "sparkles" "Class" "h-3 w-3") }}
                  {{ .ScoreDisplay }}
                  {{ if .ScoreTag }}<span class="font-normal text-indigo-500">{{ .ScoreTag }}</span>{{ end }}
                </span>
                <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-2 py-0.5 text-gray-700">
                  {{ template "icon" (dict "Name" "user-group" "Class" "h-3 w-3") }}
                  {{ .PersonaLabel }}
                </span>
                <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5
                             {{ if eq $tone "success" }}bg-emerald-50 text-emerald-700
                             {{ else if eq $tone "warning" }}bg-amber-50 text-amber-700
                             {{ else if eq $tone "info" }}bg-sky-50 text-sky-700
                             {{ else if eq $tone "muted" }}bg-gray-100 text-gray-600
                             {{ else }}bg-gray-100 text-gray-700{{ end }}"
                      data-status-label>
                  {{ template "icon" (dict "Name" "status-online" "Class" "h-3 w-3") }}
                  <span>{{ .StatusLabel }}</span>
                </span>
              </div>
            </div>
            <button type="button"
                    class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-gray-200 text-gray-500 transition hover:border-indigo-300 hover:text-indigo-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500"
                    hx-get="/design/ai/preview?id={{ .ID }}"
                    hx-target="#design-ai-preview"
                    hx-swap="innerHTML"
                    data-preview-trigger="{{ .ID }}"
                    aria-label="Open preview">
              {{ template "icon" (dict "Name" "chevron-right" "Class" "h-4 w-4") }}
            </button>
          </header>

          <div class="flex flex-wrap gap-2 text-xs text-gray-500">
            {{ range .Tags }}
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 font-medium text-gray-600">#{{ . }}</span>
            {{ end }}
          </div>

          <div class="rounded-xl border border-dashed border-indigo-100 bg-indigo-50/50 p-4 text-center text-sm font-medium text-indigo-700">
            <span data-confidence>{{ .Confidence }}</span>
          </div>

          <dl class="grid grid-cols-2 gap-3 text-xs text-gray-500">
            <div>
              <dt class="uppercase tracking-wide text-gray-400">Generated</dt>
              <dd class="mt-1 text-gray-700">{{ .Age }}</dd>
            </div>
            <div>
              <dt class="uppercase tracking-wide text-gray-400">Queue</dt>
              <dd class="mt-1 text-gray-700">{{ .ETA }}</dd>
            </div>
          </dl>

          <div class="flex flex-wrap gap-2 text-xs font-medium">
            {{ range .Diff }}
              {{ $kind := .Kind }}
              <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5
                           {{ if eq $kind "add" }}bg-emerald-50 text-emerald-700
                           {{ else if eq $kind "change" }}bg-indigo-50 text-indigo-600
                           {{ else if eq $kind "remove" }}bg-rose-50 text-rose-600
                           {{ else if eq $kind "issue" }}bg-amber-50 text-amber-700
                           {{ else if eq $kind "pending" }}bg-gray-100 text-gray-600
                           {{ else if eq $kind "accept" }}bg-emerald-100 text-emerald-700
                           {{ else }}bg-gray-100 text-gray-600{{ end }}"
                    data-diff-kind="{{ $kind }}">
                {{ if eq $kind "add" }}
                  {{ template "icon" (dict "Name" "plus" "Class" "h-3 w-3") }}
                {{ else if eq $kind "change" }}
                  {{ template "icon" (dict "Name" "arrows-right-left" "Class" "h-3 w-3") }}
                {{ else if eq $kind "remove" }}
                  {{ template "icon" (dict "Name" "minus" "Class" "h-3 w-3") }}
                {{ else if eq $kind "issue" }}
                  {{ template "icon" (dict "Name" "exclamation-triangle" "Class" "h-3 w-3") }}
                {{ else if eq $kind "pending" }}
                  {{ template "icon" (dict "Name" "clock" "Class" "h-3 w-3") }}
                {{ else if eq $kind "accept" }}
                  {{ template "icon" (dict "Name" "check-circle" "Class" "h-3 w-3") }}
                {{ else }}
                  {{ template "icon" (dict "Name" "adjustments-horizontal" "Class" "h-3 w-3") }}
                {{ end }}
                <span>{{ .Label }}</span>
              </span>
            {{ end }}
          </div>

          <button type="button"
                  class="mt-auto inline-flex items-center justify-center gap-2 rounded-lg border border-gray-200 px-3 py-2 text-sm font-medium text-gray-700 transition hover:border-indigo-300 hover:text-indigo-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500"
                  hx-get="/design/ai/preview?id={{ .ID }}"
                  hx-target="#design-ai-preview"
                  hx-swap="innerHTML"
                  data-preview-trigger="{{ .ID }}">
            {{ template "icon" (dict "Name" "cursor-arrow-rays" "Class" "h-4 w-4") }}
            View details
          </button>
        </article>
      {{ end }}
    </div>
  {{ end }}
</div>
{{ end }}

{{ define "frag_design_ai_preview" }}
{{ $detail := . }}
<div class="flex h-full flex-col gap-5 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm"
     data-suggestion-id="{{ $detail.ID }}">
  {{ if not $detail.ID }}
    <div class="flex h-full flex-col items-center justify-center gap-3 text-center text-sm text-gray-600">
      {{ template "icon" (dict "Name" "sparkles" "Class" "h-10 w-10 text-indigo-500") }}
      <p class="font-medium text-gray-700">Select a suggestion to open the preview drawer.</p>
      <p class="text-xs text-gray-500">Accepted layouts instantly update the design editor preview.</p>
    </div>
  {{ else }}
    <header class="space-y-3">
      <div class="flex items-start justify-between gap-3">
        <div>
          <p class="text-xs uppercase tracking-wide text-indigo-500">{{ $detail.PersonaLabel }}</p>
          <h2 class="text-lg font-semibold text-gray-900 leading-tight">{{ $detail.Title }}</h2>
        </div>
        <span class="inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-semibold uppercase tracking-wide
                     {{ if eq $detail.StatusTone "success" }}bg-emerald-50 text-emerald-700
                     {{ else if eq $detail.StatusTone "warning" }}bg-amber-50 text-amber-700
                     {{ else if eq $detail.StatusTone "info" }}bg-sky-50 text-sky-700
                     {{ else if eq $detail.StatusTone "muted" }}bg-gray-100 text-gray-600
                     {{ else }}bg-gray-100 text-gray-700{{ end }}"
              data-preview-status>
          {{ template "icon" (dict "Name" "status-online" "Class" "h-3 w-3") }}
          <span>{{ $detail.StatusLabel }}</span>
        </span>
      </div>
      <div class="flex flex-wrap items-center gap-2 text-xs text-gray-500">
        <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2 py-0.5 font-medium text-indigo-600">
          {{ template "icon" (dict "Name" "sparkles" "Class" "h-3 w-3") }}
          {{ $detail.ScoreDisplay }}
          {{ if $detail.ScoreTag }}<span class="font-normal text-indigo-500">{{ $detail.ScoreTag }}</span>{{ end }}
        </span>
        <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-2 py-0.5 font-medium text-gray-600">{{ $detail.GeneratedAgo }}</span>
        <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-2 py-0.5 font-medium text-gray-600">{{ $detail.Confidence }}</span>
      </div>
      <p class="text-sm leading-5 text-gray-700">{{ $detail.Description }}</p>
    </header>

    <section class="rounded-xl border border-gray-200 bg-gradient-to-br from-gray-50 via-white to-gray-100 p-6 text-center shadow-inner">
      <div class="mx-auto flex h-40 max-w-xs items-center justify-center rounded-full border-4 border-gray-900/80 bg-white text-3xl font-semibold tracking-wide text-gray-900">
        {{ if $detail.Thumbnail }}
          <img src="{{ $detail.Thumbnail }}" alt="Preview thumbnail" class="h-full w-full rounded-full object-cover">
        {{ else }}
          AI
        {{ end }}
      </div>
      <p class="mt-3 text-xs text-gray-500">Preview mock • updates the editor instantly on accept</p>
    </section>

    <section class="grid gap-3 text-sm text-gray-700">
      <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500">Highlights</h3>
      <div class="flex flex-wrap gap-2 text-xs font-medium">
        {{ range $detail.Diff }}
          {{ $kind := .Kind }}
          <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5
                       {{ if eq $kind "add" }}bg-emerald-50 text-emerald-700
                       {{ else if eq $kind "change" }}bg-indigo-50 text-indigo-600
                       {{ else if eq $kind "remove" }}bg-rose-50 text-rose-600
                       {{ else if eq $kind "issue" }}bg-amber-50 text-amber-700
                       {{ else if eq $kind "pending" }}bg-gray-100 text-gray-600
                       {{ else if eq $kind "accept" }}bg-emerald-100 text-emerald-700
                       {{ else }}bg-gray-100 text-gray-600{{ end }}">
            <span>{{ .Label }}</span>
          </span>
        {{ end }}
      </div>
    </section>

    {{ if $detail.Insights }}
    <section class="grid gap-3">
      <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500">Insights</h3>
      <div class="grid gap-3 sm:grid-cols-2">
        {{ range $detail.Insights }}
          <div class="rounded-xl border border-gray-200 bg-white p-3 shadow-sm">
            <p class="text-xs uppercase tracking-wide text-gray-400">{{ .Label }}</p>
            <p class="mt-1 text-base font-semibold {{ if eq .Tone "success" }}text-emerald-600{{ else if eq .Tone "warning" }}text-amber-600{{ else if eq .Tone "neutral" }}text-gray-700{{ else }}text-indigo-600{{ end }}">{{ .Value }}</p>
            {{ if .Tooltip }}<p class="mt-1 text-xs text-gray-500">{{ .Tooltip }}</p>{{ end }}
          </div>
        {{ end }}
      </div>
    </section>
    {{ end }}

    {{ if $detail.Notes }}
    <section class="space-y-2">
      <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500">Notes</h3>
      <ul class="space-y-1 text-sm text-gray-600">
        {{ range $detail.Notes }}
          <li class="flex items-start gap-2">
            <span class="mt-1 inline-flex h-1.5 w-1.5 flex-shrink-0 rounded-full bg-indigo-400"></span>
            <span>{{ . }}</span>
          </li>
        {{ end }}
      </ul>
    </section>
    {{ end }}

    <div class="mt-auto flex flex-col gap-3">
      <div class="flex flex-wrap items-center gap-2">
        <button type="button"
                class="inline-flex flex-1 items-center justify-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 disabled:cursor-not-allowed disabled:opacity-60"
                hx-post="{{ $detail.AcceptURL }}"
                hx-target="#design-ai-preview"
                hx-swap="innerHTML"
                data-action="accept"
                {{ if $detail.ActionsDisabled }}disabled{{ end }}>
          {{ template "icon" (dict "Name" "thumb-up" "Class" "h-4 w-4") }}
          Accept suggestion
        </button>
        <button type="button"
                class="inline-flex flex-1 items-center justify-center gap-2 rounded-lg border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:border-rose-300 hover:text-rose-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-rose-500 disabled:cursor-not-allowed disabled:opacity-50"
                hx-post="{{ $detail.RejectURL }}"
                hx-target="#design-ai-preview"
                hx-swap="innerHTML"
                data-action="reject"
                {{ if $detail.ActionsDisabled }}disabled{{ end }}>
          {{ template "icon" (dict "Name" "thumb-down" "Class" "h-4 w-4") }}
          Reject &amp; archive
        </button>
      </div>
      <p class="text-xs text-gray-500">Accepting immediately updates the live design preview. Rejected items move to the archive but stay accessible under history.</p>
    </div>
  {{ end }}
</div>
{{ end }}

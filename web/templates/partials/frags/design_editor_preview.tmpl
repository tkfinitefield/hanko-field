{{ define "frag_design_editor_preview" }}
<div class="flex h-full flex-col">
  <header class="flex flex-col gap-2 border-b border-slate-200 bg-white px-6 py-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h2 class="text-sm font-semibold text-slate-800">{{ if eq .Lang "ja" }}ライブプレビュー{{ else }}Live preview{{ end }}</h2>
      <p class="text-xs text-slate-500">{{ .Preview.UpdatedLabel }}</p>
    </div>
    <div class="flex items-center gap-2 text-xs">
      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-600">
        <svg class="h-3 w-3" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.4"><path d="M5 10h10"/><path d="M10 5l5 5-5 5"/></svg>
        {{ .SelectedTemplate.Name }}
      </span>
      <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-600">
        <svg class="h-3 w-3" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.4"><path d="M4 4h12v12H4z"/><path d="M4 10h12"/><path d="M10 4v12"/></svg>
        {{ .SelectedFont.Name }}
      </span>
    </div>
  </header>
  <div class="relative flex-1 overflow-auto bg-slate-100 p-6">
    <div id="editor-preview-indicator" class="htmx-indicator pointer-events-none absolute inset-0 z-10 hidden items-center justify-center bg-white/70">
      <svg class="h-6 w-6 animate-spin text-indigo-500" viewBox="0 0 24 24" fill="none">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
      </svg>
    </div>
    <div class="mx-auto max-w-xl rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="overflow-hidden rounded-2xl border border-slate-200 bg-slate-100 p-4">
        <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow">
          {{ .Preview.SVG }}
        </div>
      </div>
    </div>
  </div>
  <footer class="border-t border-slate-200 bg-white px-6 py-4">
    <div class="grid gap-4 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
      <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3">
        <h3 class="text-xs font-semibold uppercase tracking-wide text-slate-500">{{ if eq .Lang "ja" }}パラメータ{{ else }}Parameters{{ end }}</h3>
        <dl class="mt-3 grid grid-cols-2 gap-3 text-sm text-slate-700 sm:grid-cols-4">
          {{ range .Preview.Stats }}
            <div>
              <dt class="text-xs uppercase tracking-wide text-slate-500">{{ .Label }}</dt>
              <dd class="mt-1 font-medium text-slate-800">{{ .Value }}</dd>
            </div>
          {{ end }}
        </dl>
      </div>
      <div class="rounded-lg border border-indigo-100 bg-indigo-50 px-4 py-3">
        <h3 class="text-xs font-semibold uppercase tracking-wide text-indigo-600">{{ if eq .Lang "ja" }}チェックポイント{{ else }}Checks & insights{{ end }}</h3>
        {{ if .Preview.Issues }}
          <ul class="mt-3 space-y-2 text-xs text-indigo-800">
            {{ range .Preview.Issues }}
              <li class="flex items-start gap-2">
                <span class="mt-0.5 h-1.5 w-1.5 flex-none rounded-full {{ if eq .Level "error" }}bg-rose-500{{ else if eq .Level "notice" }}bg-amber-500{{ else }}bg-indigo-400{{ end }}"></span>
                <span>{{ .Message }}</span>
              </li>
            {{ end }}
          </ul>
        {{ else }}
          <p class="mt-3 text-xs text-indigo-700">{{ if eq .Lang "ja" }}問題は検出されていません。安心して次の工程へ進めます。{{ else }}No issues detected—ready for the next handoff.{{ end }}</p>
        {{ end }}
      </div>
    </div>
  </footer>
</div>
{{ end }}

{{ define "frag_cart_table" }}
{{ $view := . }}
<div class="space-y-4" id="cart-table" data-cart-table aria-live="polite">
  {{ if or (not $view) (eq (len $view.Items) 0) }}
    <div class="rounded-2xl border border-dashed border-gray-300 bg-white p-8 text-center shadow-sm">
      <h2 class="text-xl font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}カートは空です{{ else }}No items yet{{ end }}</h2>
      <p class="mt-2 text-sm text-gray-600">
        {{ if eq $view.Lang "ja" }}
          商品を追加すると明細が表示されます。素材やテンプレから選んでください。
        {{ else }}
          Once you add designs or accessories, the breakdown will appear here. Head back to the shop to continue exploring.
        {{ end }}
      </p>
      <a href="/shop" class="mt-4 inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">
        {{ if eq $view.Lang "ja" }}ショップへ{{ else }}Go to shop{{ end }}
      </a>
    </div>
  {{ else }}
    {{ range $view.Items }}
      <article class="flex flex-col gap-4 rounded-2xl border border-gray-200 bg-white p-4 shadow-sm sm:flex-row">
        <div class="w-full sm:w-40">
          <div class="aspect-square overflow-hidden rounded-xl bg-gray-100">
            <img src="{{ .Image }}" alt="{{ .Name }}" class="h-full w-full object-cover" loading="lazy">
          </div>
        </div>
        <div class="flex flex-1 flex-col gap-4">
          <div class="flex flex-wrap items-start justify-between gap-3">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-gray-400">{{ .SKU }}</p>
              <h3 class="text-lg font-semibold text-gray-900">{{ .Name }}</h3>
              <p class="text-sm text-gray-600">{{ .Subtitle }}</p>
              <div class="mt-2 flex flex-wrap items-center gap-2 text-xs">
                {{ if .Badge }}
                  <span class="inline-flex items-center gap-1 rounded-full px-3 py-1 font-medium {{ if eq .BadgeTone "success" }}bg-emerald-50 text-emerald-700{{ else if eq .BadgeTone "warning" }}bg-amber-50 text-amber-700{{ else }}bg-indigo-50 text-indigo-700{{ end }}">
                    {{ .Badge }}
                  </span>
                {{ end }}
                {{ if .InStock }}
                  <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 font-medium text-emerald-700">
                    {{ template "icon" (dict "Name" "check" "Class" "h-4 w-4") }}
                    {{ if eq $view.Lang "ja" }}在庫あり{{ else }}In stock{{ end }}
                  </span>
                {{ end }}
              </div>
            </div>
            <button type="button" class="text-sm text-gray-400 hover:text-red-500" title="{{ if eq $view.Lang "ja" }}削除{{ else }}Remove{{ end }}">
              {{ template "icon" (dict "Name" "trash" "Class" "h-5 w-5") }}
              <span class="sr-only">{{ if eq $view.Lang "ja" }}削除{{ else }}Remove{{ end }}</span>
            </button>
          </div>
          <dl class="grid gap-3 text-sm text-gray-600 md:grid-cols-2">
            {{ range .Options }}
              <div class="flex flex-col rounded-lg border border-gray-100 bg-gray-50 px-3 py-2">
                <dt class="text-xs uppercase tracking-wide text-gray-400">{{ .Label }}</dt>
                <dd class="font-medium text-gray-900">{{ .Value }}</dd>
              </div>
            {{ end }}
          </dl>
          <div class="flex flex-wrap items-end justify-between gap-4 border-t border-gray-100 pt-4 text-sm">
            <div class="space-y-1">
              <p class="font-medium text-gray-900">{{ if eq $view.Lang "ja" }}納期{{ else }}ETA{{ end }}: {{ .ETA }}</p>
              {{ if .Notes }}
                <ul class="text-xs text-gray-500">
                  {{ range .Notes }}
                    <li>• {{ . }}</li>
                  {{ end }}
                </ul>
              {{ end }}
            </div>
            <div class="flex flex-col items-end gap-2">
              <div class="text-right text-xs uppercase tracking-wide text-gray-400">{{ if eq $view.Lang "ja" }}単価{{ else }}Unit price{{ end }}</div>
              <p class="text-lg font-semibold text-gray-900">{{ fmtMoney .UnitPrice "JPY" $view.Lang }}</p>
              <div>
                {{ template "c_stepper" (dict "Name" (printf "qty_%s" .ID) "Value" .Quantity "Min" .MinQty "Max" .MaxQty) }}
              </div>
              <div class="text-right text-xs uppercase tracking-wide text-gray-400">{{ if eq $view.Lang "ja" }}小計{{ else }}Line total{{ end }}</div>
              <p class="text-xl font-bold text-gray-900">{{ fmtMoney .LineTotal "JPY" $view.Lang }}</p>
            </div>
          </div>
        </div>
      </article>
    {{ end }}
    <p class="text-xs text-gray-500">
      {{ if eq $view.Lang "ja" }}
        最終更新: {{ fmtDate $view.LastUpdated $view.Lang }}
      {{ else }}
        Last updated {{ fmtDate $view.LastUpdated $view.Lang }}
      {{ end }}
    </p>
  {{ end }}
</div>
{{ end }}

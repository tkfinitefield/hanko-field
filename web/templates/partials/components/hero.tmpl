{{ define "c_hero" }}
{{ $align := .Align }}{{ if not $align }}{{ $align = "center" }}{{ end }}
{{ $bg := .Bg }}
{{ $bgc := "" }}
{{ if eq $bg "brand" }}
  {{ $bgc = "bg-indigo-50" }}
{{ else if eq $bg "muted" }}
  {{ $bgc = "bg-gray-50" }}
{{ end }}
<section class="py-10 {{ $bgc }}">
  <div class="mx-auto max-w-3xl px-4 {{ if eq $align "center" }}text-center{{ else }}text-left{{ end }}">
    {{ if .Eyebrow }}<div class="text-xs uppercase tracking-wide text-indigo-600">{{ .Eyebrow }}</div>{{ end }}
    {{ if .Title }}<h1 class="text-3xl md:text-4xl font-bold tracking-tight">{{ .Title }}</h1>{{ end }}
    {{ if .Subtitle }}<p class="mt-3 text-gray-600">{{ .Subtitle }}</p>{{ end }}
    {{ if .Actions }}
      <div class="mt-6">
        {{ template "c_button_set" (dict "Align" $align "Buttons" .Actions) }}
      </div>
    {{ end }}
  </div>
</section>
{{ end }}


{{ define "content_toc" }}
{{ $lang := .Lang }}
<nav class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm" aria-label="{{ tlang $lang "content.toc" }}">
  <p class="text-sm font-semibold text-gray-700">{{ tlang $lang "content.toc" }}</p>
  <ol class="mt-3 space-y-2 text-sm text-gray-600">
    {{ range .TOC }}
      <li>
        <a href="#{{ .ID }}" class="block rounded px-2 py-1 hover:bg-indigo-50 hover:text-indigo-600 {{ if eq .Level 3 }}ml-4{{ else if eq .Level 4 }}ml-8{{ end }}">{{ .Text }}</a>
      </li>
    {{ end }}
  </ol>
</nav>
{{ end }}

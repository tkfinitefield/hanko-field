{{ define "c_inline_alert" }}
{{ $tone := .Tone }}
{{ $icon := .Icon }}
{{ $border := "border-gray-200" }}
{{ $bg := "bg-gray-50" }}
{{ $text := "text-gray-800" }}
{{ if eq $tone "error" }}
  {{ $border = "border-red-200" }}
  {{ $bg = "bg-red-50" }}
  {{ $text = "text-red-900" }}
  {{ if not $icon }}{{ $icon = "exclamation-triangle" }}{{ end }}
{{ else if eq $tone "success" }}
  {{ $border = "border-emerald-200" }}
  {{ $bg = "bg-emerald-50" }}
  {{ $text = "text-emerald-900" }}
  {{ if not $icon }}{{ $icon = "check-circle" }}{{ end }}
{{ else if eq $tone "info" }}
  {{ $border = "border-indigo-200" }}
  {{ $bg = "bg-indigo-50" }}
  {{ $text = "text-indigo-900" }}
  {{ if not $icon }}{{ $icon = "information-circle" }}{{ end }}
{{ end }}
<div class="flex items-start gap-3 rounded-xl border {{ $border }} {{ $bg }} px-4 py-3 text-sm {{ $text }}" role="status" aria-live="polite">
  {{ if $icon }}
    <span class="mt-0.5 inline-flex h-8 w-8 flex-none items-center justify-center rounded-full bg-white/80">
      {{ template "icon" (dict "Name" $icon "Class" "h-4 w-4") }}
    </span>
  {{ end }}
  <div class="space-y-1">
    {{ if .Title }}<p class="font-semibold">{{ .Title }}</p>{{ end }}
    {{ if .Body }}<p class="text-sm leading-snug">{{ .Body }}</p>{{ end }}
  </div>
</div>
{{ end }}

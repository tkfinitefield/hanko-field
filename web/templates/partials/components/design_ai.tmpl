{{ define "c_ai_stats_bar" }}
{{ $stats := .Stats }}
<div class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    {{ range $stats }}
      <div class="flex flex-col gap-1">
        <span class="text-xs uppercase tracking-wide text-gray-500">{{ .Label }}</span>
        <span class="text-lg font-semibold text-gray-900">{{ .Value }}</span>
        {{ if .Trend }}
          <span class="text-xs font-medium {{ if eq .Tone "positive" }}text-emerald-600{{ else if eq .Tone "success" }}text-emerald-600{{ else if eq .Tone "warning" }}text-amber-600{{ else if eq .Tone "negative" }}text-rose-600{{ else if eq .Tone "muted" }}text-gray-500{{ else }}text-indigo-600{{ end }}">{{ .Trend }}</span>
        {{ end }}
      </div>
    {{ end }}
  </div>
</div>
{{ end }}

{{ define "c_inline_notice" }}
<div class="flex items-center gap-2 rounded-lg border border-indigo-100 bg-indigo-50 px-3 py-2 text-xs font-medium text-indigo-700" id="{{ .ID }}">
  <span class="inline-flex h-2 w-2 animate-pulse rounded-full bg-indigo-500"></span>
  <span>{{ .Message }}</span>
</div>
{{ end }}

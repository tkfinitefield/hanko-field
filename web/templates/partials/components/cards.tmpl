{{ define "c_card" }}
{{ $variant := .Variant }}
{{ $cls := "rounded-lg bg-white" }}
{{ if eq $variant "elevated" }}
  {{ $cls = printf "%s %s" $cls "shadow" }}
{{ else if eq $variant "outlined" }}
  {{ $cls = printf "%s %s" $cls "border border-gray-200" }}
{{ else }}
  {{ $cls = printf "%s %s" $cls "border border-gray-100" }}
{{ end }}
<div class="{{ $cls }}">
  {{ if .MediaURL }}<img src="{{ .MediaURL }}" alt="{{ .MediaAlt }}" class="w-full h-40 object-cover rounded-t-lg">{{ end }}
  <div class="p-4">
    {{ if .Title }}<h3 class="text-base font-semibold">{{ .Title }}</h3>{{ end }}
    {{ if .Description }}<p class="mt-1 text-sm text-gray-600">{{ .Description }}</p>{{ end }}
    {{ with .Body }}<div class="mt-3 text-sm text-gray-700">{{ . }}</div>{{ end }}
  </div>
  {{ with .Footer }}
    <div class="px-4 py-3 border-t border-gray-100">{{ . }}</div>
  {{ end }}
</div>
{{ end }}

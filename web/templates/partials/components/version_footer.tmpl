{{ define "version_footer" }}
{{ $lang := .Lang }}
{{ $version := .Version }}
<footer class="mt-10 rounded-lg border border-gray-200 bg-gray-50 p-5 text-sm text-gray-600">
  <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div class="space-y-1">
      {{ if $version.Version }}
        <p class="font-semibold text-gray-700">{{ tlang $lang "content.version.label" }} {{ $version.Version }}</p>
      {{ end }}
      {{ if $version.Updated }}
        <p>{{ tlang $lang "content.version.updated" }} <time datetime="{{ $version.UpdatedISO }}">{{ $version.Updated }}</time></p>
      {{ end }}
    </div>
    {{ if $version.DownloadURL }}
      <a href="{{ $version.DownloadURL }}" class="inline-flex items-center gap-2 rounded-md border border-indigo-200 bg-white px-3 py-2 text-sm font-medium text-indigo-600 shadow-sm hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        {{ template "icon" dict "Name" "download" "Class" "h-4 w-4" }}
        <span>{{ $version.DownloadLabel }}</span>
      </a>
    {{ end }}
  </div>
</footer>
{{ end }}

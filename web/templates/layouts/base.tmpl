{{ define "base" }}
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ template "title" . }}</title>
    {{ template "head" . }}
    <link rel="stylesheet" href="/assets/app.css">
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="border-b bg-white">
      <div class="mx-auto max-w-5xl px-4 py-4 flex items-center justify-between">
        <a href="/" class="font-semibold text-xl">Hanko Field</a>
        <nav class="text-sm space-x-4">
          <a href="/shop" class="hover:underline">Shop</a>
          <a href="/templates" class="hover:underline">Templates</a>
          <a href="/guides" class="hover:underline">Guides</a>
          <a href="/account" class="hover:underline">Account</a>
        </nav>
      </div>
    </header>
    <main id="main" class="mx-auto max-w-5xl px-4 py-10">
      {{ block "content" . }}{{ end }}
    </main>
    <footer class="mt-16 border-t bg-white">
      <div class="mx-auto max-w-5xl px-4 py-8 text-sm text-gray-500">
        Â© <span>{{ now.Format "2006" }}</span> Finite Field
      </div>
    </footer>
    <script src="/assets/js/htmx.min.js"></script>
    <script>
      (function(){
        function getCookie(name){
          const m = document.cookie.match(new RegExp('(?:^|; )' + name.replace(/([.$?*|{}()\[\]\\\/\+^])/g, '\\$1') + '=([^;]*)'));
          return m ? decodeURIComponent(m[1]) : '';
        }
        document.addEventListener('htmx:configRequest', function(e){
          var token = getCookie('csrf_token');
          if (token) { e.detail.headers['X-CSRF-Token'] = token; }
        });
      })();
    </script>
  </body>
</html>
{{ end }}
